<odoo>
    <record id="view_app_form" model="ir.ui.view">
        <field name="name">didaktikapp.app.form</field>
        <field name="model">didaktikapp.app</field>
        <field name="arch" type="xml">
            <form>
            <header>
        <button name="action_marcar_todas_ios"
                type="object"
                string="Todas iOS"
                class="btn-primary"/>

        <button name="action_desmarcar_todas_ios"
                type="object"
                string="Ninguna iOS"/>
            </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="fecha_fin"/>
                        <field name="cliente_id"/>
                        <field name="responsable_comunicacion_id"/>
                        <field name="ios"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_app_tree" model="ir.ui.view">
        <field name="name">didaktikapp.app.tree</field>
        <field name="model">didaktikapp.app</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="fecha_fin"/>
                <field name="cliente_id"/>
                <field name="responsable_comunicacion_id"/>
                <field name="ios"/>
            </tree>
        </field>
    </record>

<menuitem id="menu_didaktikapp_root"
          name="Didaktik Apps"
          sequence="10"
          groups="base.group_user"/>

<record id="action_didaktikapp_app" model="ir.actions.act_window">
    <field name="name">Aplicaciones</field>
    <field name="res_model">didaktikapp.app</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_didaktikapp_app"
          name="Aplicaciones"
          parent="menu_didaktikapp_root"
          action="action_didaktikapp_app"/>
</odoo>